<%- include('partials/header') %>

<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
    <h2 class="m-0">Hamburguesas de <%= restaurante.nombre %></h2>
    <a href="/admin/agregarhamburguesa/<%= restaurante.id %>" class="btn btn-success">
      Agregar Hamburguesa
    </a>
  </div>
</div>


<div class="container mt-5 mb-5">
  <h3 class="mb-4">Hamburguesas registradas</h3>
  <div class="row row-cols-1 g-4">
    <% restaurante.hamburguesas.forEach((hamburguesa, index) => { %>
      <div class="col">
        <div class="card shadow-sm">
          <div class="card-body d-flex justify-content-between align-items-center flex-wrap">
            <p class="card-text fw-semibold mb-2 mb-md-0"><%= hamburguesa.nombre %></p>

            <div class="d-flex gap-2">
              <a href="/admin/editarhamburguesa/<%= restaurante.id %>/<%= hamburguesa.hid %>" class="btn btn-sm btn-outline-primary">
                Editar
              </a>

              <form action="/admin/borrarhamburguesa/<%= restaurante.id %>/<%= hamburguesa.hid %>" method="POST" onsubmit="return confirm('Â¿Eliminar esta hamburguesa?')">
                <button type="submit" class="btn btn-sm btn-outline-danger">
                  Eliminar
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<%- include('partials/footer') %>
