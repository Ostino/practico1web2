<%- include('partials/header') %>

<div class="container mt-5 mb-5">
  <h1 class="text-center mb-4"><%= restaurante.nombre %></h1>

  <div class="d-flex justify-content-center align-items-center gap-3 mb-4">
    <button id="likeBtn" data-id="<%= restaurante.id %>" class="btn btn-outline-danger">
      Dar Like
    </button>
    <span id="likeCount" class="fs-5"><%= restaurante.likes %> likes</span>
  </div>

  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% restaurante.hamburguesas.forEach(h => { %>
      <div class="col">
        <div class="card h-100 shadow-sm">
          <img src="/images/<%= h.foto %>" alt="<%= h.nombre %>" class="card-img-top">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title text-center"><%= h.nombre %></h5>
            <p class="card-text text-center"><%= h.descripcion %></p>
            <strong class="text-center">Bs <%= h.precio %></strong>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>


<script src="/script.js"></script>

<%- include('partials/footer') %>
