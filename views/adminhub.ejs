<%- include('partials/header') %>

<div class="container mt-5 d-flex justify-content-between align-items-center flex-wrap gap-3">
  <h1 class="m-0">Restaurantes Participantes</h1>
  <a href="/admincrt" class="btn btn-primary">
    Añadir Restaurante
  </a>
</div>


<div class="restaurantes">
  <% restaurantes.forEach(restaurante => { %>
    <div class="restaurante">
        <img src="/images/<%= restaurante.logo %>" alt="<%= restaurante.nombre %>" />
        <h2><%= restaurante.nombre %></h2>
      <p>❤️ <%= restaurante.likes %> likes</p>
      <div class="d-flex flex-wrap gap-2 mt-4 botones-admin">
        <a href="/admin/editarrestaurante/<%= restaurante.id %>" class="btn btn-warning flex-fill text-center min-width-btn">
          Editar Restaurante
        </a>
      
        <a href="/admin/editarhamburguesas/<%= restaurante.id %>" class="btn btn-secondary text-white flex-fill text-center min-width-btn">
          Editar Hamburguesas
        </a>
      
        <form action="/admin/borrarrestaurante/<%= restaurante.id %>" method="POST" class="flex-fill">
          <button type="submit" class="btn btn-danger w-100 min-width-btn">Borrar Restaurante</button>
        </form>
      </div>
    </div>
  <% }) %>
</div>

<%- include('partials/footer') %>
