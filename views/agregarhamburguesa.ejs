<%- include('partials/header') %>

<div class="container mt-5">
  <h2 class="text-center mb-4">Agregar Hamburguesa al Restaurante: <%= restaurante.nombre %></h2>

  <form action="/admin/agregarhamburguesa/<%= restaurante.id %>" method="POST" enctype="multipart/form-data">
    <div class="mb-3">
      <label for="hamburguesa_nombre" class="form-label">Nombre:</label>
      <input type="text" name="hamburguesa_nombre" class="form-control" required>
    </div>

    <div class="mb-3">
      <label for="hamburguesa_descripcion" class="form-label">Descripci√≥n:</label>
      <textarea name="hamburguesa_descripcion" class="form-control" required></textarea>
    </div>

    <div class="mb-3">
      <label for="hamburguesa_precio" class="form-label">Precio:</label>
      <input type="text" name="hamburguesa_precio" class="form-control" required>
    </div>

    <div class="mb-3">
      <label for="hamburguesa_foto" class="form-label">Foto:</label>
      <input type="file" name="hamburguesa_foto" class="form-control" accept="image/*" required>
    </div>

    <div class="d-flex justify-content-center">
      <button type="submit" class="btn btn-success">Agregar Hamburguesa</button>
    </div>
  </form>
</div>


<%- include('partials/footer') %>
